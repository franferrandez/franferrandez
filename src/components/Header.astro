---
import Toggle from "./Toggle.astro";
import { Icon } from "astro-icon/components";
---

<header class="ml-9 mr-9 lg:md:ml-52 lg:md:mr-52 mt-4 mb-4 ">
  <section class="mb-1 pl-1 pr-1">
    <div class="flex justify-center">
      <h1 class="text-2xl">Francisco Ferrández Martínez</h1>
    </div>
    <div class="flex items-center justify-between mt-2">
      <h3 class="text-base">Full Stack Developer</h3>
      <div class="flex gap-3">
        <div class="flex gap-2">
          <a
            href="https://github.com/franferrandez"
            target="_blank"
            rel="noreferrer nopener"><Icon name="github" /></a
          >
          <a href="mailto:franciscoferrandezmartinez@gmail.com"
            ><Icon name="mail" /></a
          >
          <a
            href="https://www.linkedin.com/in/franferrandez/"
            target="_blank"
            rel="noreferrer nopener"><Icon name="linkedin" /></a
          >
        </div>
        <Toggle />
      </div>
    </div>
    
  </section>
  <hr/>
</header>

<style>
  hr {
    width: 100%;
  }

  [data-icon] {
    font-size: 2rem;
  }
  a {
    display: inline-block; /* Asegura que el elemento se trate como un bloque en línea para transformaciones */
    transition:
      transform 0.2s,
      color 0.2s;
  }

  a:hover {
    transform: scale(1.1);
  }
</style>
