---
import Section from "./Section.astro";
import { Icon } from "astro-icon/components";
---

<Section title="TecnologÃ­as">
  <div class="flex justify-center">
    <div class="grid grid-cols-3 justify-center items-center gap-10">
      <div class="flex">
        <a
          href="https://angular.dev/"
          target="_blank"
          rel="noreferrer nopener"><Icon name="angular" /></a
        >
      </div>
      <div class="flex">
        <a
          href="https://dotnet.microsoft.com/es-es/"
          target="_blank"
          rel="noreferrer nopener"><Icon name="net" /></a
        >
      </div>
      <div class="flex">
        <a
          href="https://www.typescriptlang.org/"
          target="_blank"
          rel="noreferrer nopener"><Icon name="typescript" /></a
        >
      </div>
      <div class="flex justify-center col-span-3">
        <a
          href="https://git-scm.com/"
          target="_blank"
          rel="noreferrer nopener"><Icon class="git" name="git" /></a
        >
      </div>
    </div>
  </div>
</Section>

<style>
  [data-icon] {
    font-size: 4rem;
  }

  .git {
    font-size: 5rem;
  }

  a {
    transition: transform 0.3s;
  }

  a:hover {
    transform: scale(1.1);
  }
</style>
