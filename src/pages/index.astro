import Header from "../components/Header.astro";
import Body from "../components/Body.astro";
import Footer from "../components/Footer.astro";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Portfolio Francisco FerrÃ¡ndez" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>franferrandez</title>
  </head>
  <body
    class="bg-slate-100 text-black dark:bg-gray-800 dark:text-white transition-colors duration-500"
  >
    <Header />
    <Body />
    <Footer />
  </body>
</html>

<style is:global>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );

    --background-color: 241, 245, 249;
    --text-color: 31, 41, 55;
  }

  .dark {
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent-dark)),
      rgb(var(--accent)) 30%,
      rgb(var(--accent-light)) 60%
    );

    --background-color: 31, 41, 55;
    --text-color: 241, 245, 249;
  }

  html {
    font-family: system-ui, sans-serif;
    scroll-behavior: smooth !important;
    transition:
      background-color 0.5s,
      color 0.5s; /* Smooth transition for background and text color */
  }

  *,
  ::before,
  ::after {
    box-sizing: border-box; /* 1 */
    border-width: 0; /* 2 */
    border-style: solid; /* 2 */
    border-color: inherit; /* 2 */
  }
</style>
